{
  "name": "@owo/keyword-detector",
  "version": "0.1.0",
  "description": "Config-driven keyword detection plugin for OpenCode",
  "files": [
    "dist"
  ],
  "type": "module",
  "types": "./src/keyword-detector.ts",
  "exports": {
    ".": {
      "types": "./dist/keyword-detector.d.ts",
      "default": "./dist/keyword-detector.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "make": "bun build src/keyword-detector.ts --outdir dist --target bun --external '@opencode-ai/*' --external '@owo/*' --external 'zod' && tsgo --emitDeclarationOnly",
    "prepublishOnly": "bun run make",
    "compile": "tsgo --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opencode-ai/plugin": "catalog:",
    "@opencode-ai/sdk": "catalog:",
    "@owo/config": "workspace:*"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20260120.1",
    "bun-types": "1.3.6"
  }
}
