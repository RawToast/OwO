{
  "name": "@owo/tools",
  "version": "0.0.1",
  "description": "Shared tools for owo plugins",
  "files": [
    "dist"
  ],
  "type": "module",
  "types": "./src/tools.ts",
  "exports": {
    ".": {
      "types": "./dist/tools.d.ts",
      "default": "./dist/tools.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "make": "bun build src/tools.ts --outdir dist --target bun --external '@opencode-ai/*' --external '@owo/*' --external 'zod' && tsgo --emitDeclarationOnly",
    "prepublishOnly": "bun run make",
    "compile": "tsgo --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@owo/config": "workspace:*"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20260120.1",
    "bun-types": "1.3.6",
    "zod": "^3.25.67"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "*",
    "@opencode-ai/sdk": "*"
  }
}
