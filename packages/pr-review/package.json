{
  "name": "@owo/pr-review",
  "version": "0.1.0",
  "bin": {
    "owo-review": "./dist/index.js"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "make": "bun build ./src/index.ts --outdir ./dist --target node --external '@opencode-ai/sdk' --external '@octokit/rest' --external '@octokit/graphql' --external 'zod' --external 'parse-diff'",
    "compile": "tsgo --noEmit",
    "clean": "rm -rf dist",
    "generate-schema": "bun run scripts/generate-schema.ts"
  },
  "dependencies": {
    "@octokit/graphql": "8.2.2",
    "@octokit/rest": "21.1.1",
    "@opencode-ai/sdk": "catalog:",
    "parse-diff": "0.11.1",
    "ts-pattern": "5.9.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:"
  }
}
