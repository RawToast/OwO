{
  "name": "@owo/code-review",
  "version": "0.1.0",
  "description": "Multi-stage code review with parallel reviewer agents for OpenCode",
  "files": [
    "dist"
  ],
  "type": "module",
  "types": "./src/code-review.ts",
  "exports": {
    ".": {
      "types": "./dist/code-review.d.ts",
      "default": "./dist/code-review.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "make": "bun build src/code-review.ts --outdir dist --target bun --external '@opencode-ai/*' --external '@owo/*' --external 'zod' && tsgo --emitDeclarationOnly",
    "prepublishOnly": "bun run make",
    "compile": "tsgo --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opencode-ai/plugin": "catalog:",
    "@opencode-ai/sdk": "catalog:",
    "@owo/config": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:"
  }
}
